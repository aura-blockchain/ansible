# Node Exporter systemd service
# Generated by Ansible - DO NOT EDIT MANUALLY

[Unit]
Description=Prometheus Node Exporter
Documentation=https://github.com/prometheus/node_exporter
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=prometheus
Group=prometheus

ExecStart=/usr/local/bin/node_exporter \
    --web.listen-address=:{{ node_exporter_port | default(9100) }} \
    --collector.systemd \
    --collector.processes \
    --collector.filesystem.mount-points-exclude="^/(sys|proc|dev|host|etc)($$|/)" \
{% if node_exporter_textfile_dir is defined %}
    --collector.textfile.directory={{ node_exporter_textfile_dir }} \
{% endif %}
{% if node_exporter_disabled_collectors is defined %}
{% for collector in node_exporter_disabled_collectors %}
    --no-collector.{{ collector }} \
{% endfor %}
{% endif %}
    --log.level={{ node_exporter_log_level | default('info') }}

Restart=on-failure
RestartSec=10
LimitNOFILE=65535

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=read-only
ReadOnlyPaths=/

# Environment
Environment="HOME=/var/lib/prometheus"

[Install]
WantedBy=multi-user.target
