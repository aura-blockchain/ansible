global:
  resolve_timeout: 5m

route:
  receiver: 'discord-notifications'
  group_by: ['alertname', 'chain_id', 'severity']
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 4h

  routes:
    - match:
        severity: critical
      receiver: 'discord-notifications'
      repeat_interval: 1h

receivers:
  - name: 'discord-notifications'
    webhook_configs:
      - url: '{{ discord_webhook }}'
        send_resolved: true
