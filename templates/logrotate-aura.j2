/var/log/aura/*.log {
    daily
    rotate 7
    compress
    delaycompress
    missingok
    notifempty
    create 0640 {{ daemon_user }} {{ daemon_user }}
}

{{ daemon_home }}/logs/*.log {
    daily
    rotate 7
    compress
    delaycompress
    missingok
    notifempty
    create 0640 {{ daemon_user }} {{ daemon_user }}
}
